<?xml version="1.0" encoding="utf-8"?>
<layout>


<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title1"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="고민과 일상을 나누는"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="30dp"
        android:text="편안한 공간"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        app:rippleColor="@color/gray"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/mailStart"
        android:id="@+id/sign_google"
        app:cornerRadius="5dp"
        android:drawableLeft="@drawable/google_logo"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Google로 시작하기"
        android:textColor="@color/black"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#9E9797"
        app:strokeWidth="1dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/mailStart"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/skin"
        android:text="이메일로 시작하기"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/buttonconfirm"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/caffe"

        app:layout_constraintEnd_toEndOf="@+id/sign_google"
        app:layout_constraintBottom_toTopOf="@+id/sign_google"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>