<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="result"
            type="com.example.appportfolio.data.entities.SearchResultEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/skin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="@{result.name}"
            android:id="@+id/title_text_view"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:text="@{result.fullAddress}"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp"
            android:id="@+id/subtitle_text_view"
            app:layout_constraintTop_toBottomOf="@id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/baccolor"
            app:layout_constraintTop_toBottomOf="@id/subtitle_text_view"
            android:layout_width="0dp"
            android:layout_height="0.03dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>