<?xml version="1.0" encoding="utf-8"?>
<layout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/skin"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.textfield.TextInputLayout

            app:hintTextColor="@color/skin_bar"
            android:textColorHint="@color/skin_bar"
            app:startIconTint="@color/skin_bar"
            app:boxStrokeColor="@color/skin_bar"
            app:boxStrokeWidth="1dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/tilEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tilPassword"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            app:layout_constraintStart_toStartOf="@id/guidline1">

            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                android:id="@+id/etEmail"
                android:maxLength="30"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:ems="15"
                android:hint="이메일..."
                android:inputType="textEmailAddress"
                android:textColorHint="@color/skinfore" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnEmail"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tilEmail"
            app:layout_constraintTop_toTopOf="@id/tilEmail"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            android:backgroundTint="@color/skin_bar"
            android:text="중복확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginBottom="15dp"
            android:textColorHint="@color/skinfore"
            app:startIconTint="@color/skinfore"
            app:boxStrokeColor="@color/skinfore"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/skinfore"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@id/tilReapeatPassword"
            android:layout_marginTop="15dp"
            android:id="@+id/tilPassword"
            app:passwordToggleEnabled="true"
            app:layout_constraintStart_toStartOf="@id/guidline1"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="비밀번호(8자 이상)"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:textColorHint="@color/skinfore"
            app:startIconTint="@color/skinfore"
            app:boxStrokeColor="@color/skinfore"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="@color/skinfore"
            android:layout_width="0dp"
            app:layout_constraintBottom_toTopOf="@id/guideline2"
            android:layout_marginTop="15dp"
            android:id="@+id/tilReapeatPassword"
            app:passwordToggleEnabled="true"
            app:layout_constraintStart_toStartOf="@id/guidline1"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                android:id="@+id/etReapeatPassword"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="비밀번호 확인"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout

            android:layout_marginTop="15dp"
            app:hintTextColor="@color/skinfore"
            android:textColorHint="@color/skinfore"
            app:startIconTint="@color/skinfore"
            app:boxStrokeColor="@color/skinfore"
            app:boxStrokeWidth="1dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/tilPhone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tilReapeatPassword"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            app:layout_constraintStart_toStartOf="@id/guidline1">

            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                android:id="@+id/etPhone"
                android:maxLength="30"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:ems="15"
                android:hint="휴대폰 번호(-제외)"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/skinfore" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnPhone"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/tilPhone"
            app:layout_constraintTop_toTopOf="@id/tilPhone"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            android:backgroundTint="@color/skin_bar"
            android:text="발송"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="15dp"
            android:visibility="invisible"
            android:textColorHint="@color/skinfore"
            app:hintTextColor="@color/skinfore"
            app:startIconTint="@color/skinfore"
            app:boxStrokeColor="@color/skinfore"
            app:boxStrokeWidth="1dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/tilAuth"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tilPhone"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            app:layout_constraintStart_toStartOf="@id/guidline1">

            <com.google.android.material.textfield.TextInputEditText
                android:theme="@style/ThemeOverlay.AppTheme.TextInputEditText.Outlined"
                android:id="@+id/etAuth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="15"
                android:hint="인증번호..."
                android:inputType="textEmailAddress"
                android:maxLength="30"

                android:textColorHint="@color/skinfore" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvCount"
            android:visibility="invisible"
            android:textColor="#FB3807"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="0:00"
            app:layout_constraintTop_toTopOf="@id/tilAuth"
            app:layout_constraintBottom_toBottomOf="@id/tilAuth"
            app:layout_constraintEnd_toStartOf="@id/btnAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="invisible"
            android:id="@+id/imgCheck"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/tilPhone"
            app:layout_constraintBottom_toBottomOf="@id/tilPhone"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <Button
            android:visibility="invisible"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnAuth"
            android:clickable="false"
            android:backgroundTint="#705454"
            app:layout_constraintTop_toTopOf="@id/tilAuth"

            app:layout_constraintEnd_toEndOf="@id/guidline3"
            android:text="제출"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btnRegister"
            android:clickable="false"
            android:backgroundTint="@color/skin_bar"
            app:layout_constraintTop_toBottomOf="@id/btnAuth"
            app:layout_constraintStart_toStartOf="@id/guidline1"
            app:layout_constraintEnd_toEndOf="@id/guidline3"
            android:text="회원가입완료"
            android:layout_width="0dp"
            android:layout_height="60dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/login_with_existing_account"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tilPassword"
            app:layout_constraintStart_toStartOf="@+id/tilPassword"
            />
        <ProgressBar
            android:id="@+id/registerProgressBar"
            android:visibility="gone"
            android:indeterminateTint="@color/skin_bar"
            app:layout_constraintEnd_toEndOf="@+id/tilPassword"
            app:layout_constraintStart_toStartOf="@+id/tilPassword"
            app:layout_constraintTop_toBottomOf="@+id/btnRegister"
            app:layout_constraintBottom_toTopOf="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidline1"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08"/>
        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guidline3"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>