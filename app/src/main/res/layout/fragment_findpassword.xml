<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/skin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnback"
            android:layout_margin="20dp"
            android:src="@drawable/goback"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/password"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnback"
            android:src="@drawable/ic_logoff"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:text="비밀번호 찾기"
            app:layout_constraintStart_toEndOf="@+id/password"
            app:layout_constraintTop_toTopOf="@+id/password"
            app:layout_constraintBottom_toBottomOf="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/guidetext"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/password"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:text="가입한 이메일주소를 입력해주세요.\n비밀번호 재설정을 위한 이메일을 보내드리겠습니다."
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mailtext"
            android:textColor="@color/black"
            android:text="이메일"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@+id/password"
            app:layout_constraintTop_toBottomOf="@id/guidetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:theme="@style/editText"
            android:maxLength="30"
            android:inputType="textEmailAddress"
            android:hint="이메일"
            android:maxLines="1"
            android:id="@+id/edtmail"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toBottomOf="@+id/mailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/guideletter"
            android:layout_marginTop="10dp"
            android:text="대소문자를 구분하여 입력해주세요"
            android:textColor="#475FF1"
            app:layout_constraintTop_toBottomOf="@+id/edtmail"
            app:layout_constraintStart_toStartOf="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:backgroundTint="@color/inactive"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/guideletter"
            android:text="확인"
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ProgressBar
            android:visibility="gone"
            android:indeterminateTint="@color/skin_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnConfirm"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/progress"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>