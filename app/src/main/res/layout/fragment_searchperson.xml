<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:id="@+id/linearedt"
                android:background="@color/skin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:theme="@style/editText"
                    android:lines="1"
                    android:singleLine="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/edtNick"
                    android:hint="@string/searchperson_hint"
                    android:textColor="@color/skin_bar"
                    android:background="@drawable/linearborder"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:id="@+id/rvSearchedPerson"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/linearedt"
                app:layout_constraintBottom_toTopOf="@id/loadMoreSearcedProgressbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"/>
            <ProgressBar
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"
                android:indeterminateTint="@color/skin_bar"
                app:layout_constraintTop_toBottomOf="@id/rvSearchedPerson"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/loadMoreSearcedProgressbar"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:overScrollMode="never"
        android:id="@+id/rvFollowedPerson"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearedt"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/loadMoreFollowdProgressbar"
        android:layout_height="0dp"/>
    <ProgressBar
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/linearedt"
        android:indeterminateTint="@color/skin_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/firstloadprogress"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <ProgressBar
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rvFollowedPerson"
        android:indeterminateTint="@color/skin_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/loadMoreFollowdProgressbar"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>