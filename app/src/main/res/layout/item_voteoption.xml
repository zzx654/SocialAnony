<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="option"
            type="com.example.appportfolio.data.entities.Voteoption" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <EditText
            android:theme="@style/editText"
            android:id="@+id/edtOption"
            android:maxLines="1"
            android:text="@{option.option}"
            app:bindhint="@{option.position}"
            android:paddingLeft="7dp"

            android:layout_marginTop="10dp"
            android:background="@drawable/vote_border"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="40dp"></EditText>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>