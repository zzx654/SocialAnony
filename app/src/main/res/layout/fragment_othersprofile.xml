<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/sr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:overScrollMode="never"
                app:layout_constraintTop_toTopOf="parent"
                android:fillViewport="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
         <androidx.constraintlayout.widget.ConstraintLayout
             android:background="@color/skin"
             app:layout_constraintTop_toTopOf="parent"
             android:id="@+id/profile"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <de.hdodenhof.circleimageview.CircleImageView
                 android:id="@+id/profileimage"
                 android:layout_marginTop="20dp"
                 app:layout_constraintTop_toTopOf="parent"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 app:civ_border_width="0.1dp"
                 app:civ_border_color="#8C7878"
                 android:layout_width="55dp"
                 android:layout_height="55dp"/>

             <TextView
                 android:textColor="#4C4545"
                 android:textSize="17dp"
                 android:layout_marginTop="8dp"
                 android:id="@+id/tvnickname"
                 app:layout_constraintTop_toBottomOf="@+id/profileimage"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
             <TextView
                 android:id="@+id/tvgenderage"
                 android:layout_marginTop="8dp"
                 app:layout_constraintTop_toBottomOf="@+id/tvnickname"
                 app:layout_constraintStart_toStartOf="parent"
                 app:layout_constraintEnd_toEndOf="parent"

                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

             <androidx.constraintlayout.widget.ConstraintLayout
                 android:layout_marginTop="10dp"
                 android:paddingTop="8dp"
                 android:paddingBottom="8dp"
                 app:layout_constraintTop_toBottomOf="@+id/tvgenderage"
                 android:background="#FBF1F1"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <View
                     android:id="@+id/center"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toStartOf="parent"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_width="0.1dp"

                     android:layout_height="30dp"

                     android:background="#B8BEC3" />

            <LinearLayout
                android:id="@+id/btnfollow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgfollow"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/favorite_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#4C4545"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:text="팔로우"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

                 <LinearLayout
                     android:id="@+id/btnchat"
                     app:layout_constraintTop_toTopOf="parent"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintStart_toEndOf="@+id/center"
                     app:layout_constraintEnd_toEndOf="parent"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content">
                     <ImageView
                         android:backgroundTint="@color/transparent"
                         android:src="@drawable/comment"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
                     <TextView
                         android:textColor="#4C4545"
                         android:layout_marginLeft="5dp"
                         android:layout_gravity="center_vertical"
                         android:text="채팅하기"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
                 </LinearLayout>
             </androidx.constraintlayout.widget.ConstraintLayout>
         </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPosts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="6dp"
                        android:overScrollMode="never"
                        app:layout_constraintTop_toBottomOf="@id/profile"
                        />

                    <ProgressBar
                        android:visibility="gone"
                        android:indeterminateTint="@color/skin_bar"
                        app:layout_constraintTop_toBottomOf="@id/rvPosts"
                        android:id="@+id/loadMoreProgressbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
            <TextView
                android:visibility="invisible"
                android:id="@+id/tvWarn"
                android:textSize="15dp"
                android:textColor="@color/gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치정보 권한이 필요합니다"/>
            <ProgressBar
                android:id="@+id/loadProgressBar"
                android:visibility="gone"

                android:indeterminateTint="@color/skin_bar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="35dp"
                android:layout_height="35dp"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fbScrollTool"
                app:borderWidth="0dp"
                android:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/white"
                android:alpha="0.7"
                android:src="@drawable/ic_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>